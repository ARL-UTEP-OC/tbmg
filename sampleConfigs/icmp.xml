<xml>
    <model-basis>
        <proto-name>
            icmp
        </proto-name>
        <path-to-pcap>
            sampleConfigs/captures/10secs.pcap
        </path-to-pcap>
        <keyword>
            Type
        </keyword>
        <multi-inclusive-layers>
            false
        </multi-inclusive-layers>
        <extracted-fields>
            <layer name="eth">
                <field xml-name="mac-src" pdml-name="src" />
                <field xml-name="mac-dst" pdml-name="dst" />
            </layer>
            <layer name="ip">
                <field xml-name="ip-src" pdml-name="src" />
                <field xml-name="ip-dst" pdml-name="dst" />
            </layer>
        </extracted-fields>
    </model-basis>
    
    <model-generation>
        <model-name>
            scapytest
        </model-name>
        <network-layer>
			IPv4
		</network-layer>
		<transport-layer/>
    </model-generation>
    
    <scenario-generation>
        <remote-ip>
            10.0.0.3
        </remote-ip>
        <local-ip>
            10.0.0.1
        </local-ip>
        <gateway-ip/>
        <hil>
            False
        </hil>
    </scenario-generation>
</xml>
